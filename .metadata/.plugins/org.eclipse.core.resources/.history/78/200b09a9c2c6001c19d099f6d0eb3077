<!-- VARIABLE CONTROL DE FECHA -->
<timestamp key="dateVarLog" datePattern="dd-MM-yyyy"/>

<!-- CONFIGURACION APPENDER -->
<appender name= "TuberiaAlejandro" class="ch.qos.logback.core.rolling.RollingFileAppender">
<!-- NOMBRE DEL ARCHIVO LOG -->
<file>C://dev//logs/ficheroLogs-${dateVarLog}.log</file>
<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
	<fileNamePattern>C://dev//logs//ficheroLogs-${dateVarLog}.%i.logDual.zip</fileNamePattern>
	<minIndex>1</minIndex>
	<maxIndex>3</maxIndex>
</rollingPolicy>

<!-- LIMITE TAMAÃ‘O PERMITIDO POR ARCHIVO -->
<triggeringPlicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
<maxFileSize>50KB</maxFileSize>
</triggeringPlicy>

<encoder>
<pattern>%date %level [%thread] %logger{10} [%file : %line] %msg%n</pattern>
</encoder>
</appender>