
<configuration debug="false">

	<!-- VARIABLE CONTROL DE FECHA -->
	<timestamp key="dateVarLog" datePattern="dd-MM-yyyy" />

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file : %line] %msg%n</pattern>
		</encoder>
	</appender>


	<!-- CONFIGURACION APPENDER -->
	<appender name="TuberiaAlejandro"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- NOMBRE DEL ARCHIVO LOG -->
		<file>C://dev//logs/ficheroLogs-${dateVarLog}.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>C://dev//logs//ficheroLogs-${dateVarLog}.%i.log
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>3</maxIndex>
		</rollingPolicy>

		<!-- LIMITE TAMAÃ‘O PERMITIDO POR ARCHIVO -->
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>50KB</maxFileSize>
		</triggeringPolicy>

		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file : %line] %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<root level="debug">
	<appender-ref ref="TuberiaAlejandro"/>
	</root>
</configuration>